<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <form action="/polls/create_poll" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" name="title" />
        </div>
        <div>
            <label for="description">Description</label>
            <input type="text" name="description" />
        </div>
        <div>
            <label for="finishDate">Finish date</label>
            <input type="text" name="finishDate" />
        </div>
        <div>
            <label for="votingLimit">Voting Limit</label>
            <input type="number" name="votingLimit" />
        </div>
        <div>
            <label for="fChoice">First Choice</label>
            <input class="choice" value="abama" type="text" name="fChoice" />

            <label for="sChoce">Second Choice</label>
            <input class="choice" value="trump" type="text" name="sChoice">
            <input class="choices" name="choices" />
        </div>
        <div>
            <label for="banner">Banner</label>
            <input type="file" accept="image/*" name="banner" />
        </div>
        <div>
            <label for="hashtags">Hashtags</label>
            <input id="hasgtags" type="text" name="hashtags" />
        </div>

        <input type="submit" value="submit" />
    </form>

    <script>
    
        const choices = document.getElementsByClassName('choice');
        let dbChoices = []
        for (let i=0; i< choices.length; i++) {
            dbChoices.push(choices[i].value);
        }
        document.querySelector('.choices').value = dbChoices;
        console.log(dbChoices);

    </script>
</body>
</html>